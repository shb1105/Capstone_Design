<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_patient"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!--전체 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--아이콘 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <!--아이콘-->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/ic_patient">
            </ImageView>
        </LinearLayout>

        <!--텍스트 및 editText 레이아웃-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:text=" 환자정보"
                android:textColor="#01579b"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="성 함 :"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/patientName"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:id="@+id/genderGroup">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:id="@+id/genderWoman"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:id="@+id/genderMan"
                    android:layout_weight="1" />

            </RadioGroup>

            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="보호자 번호 :"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/patientHp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="병실 호수 :"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/patientHospital"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="left"
                android:text=" 정수기 등록"
                android:textColor="#01579b"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <EditText
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="정수기 제품 키 :"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/patientSerial"/>

            <!--버튼 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="취소"
                    android:id="@+id/backPatientButton"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="다음"
                    android:id="@+id/nextPatientButton"/>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>